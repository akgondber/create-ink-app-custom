{
	"name": "create-ink-app-custom",
	"version": "1.0.0",
	"description": "Generate a starter Ink app",
	"license": "MIT",
	"homepage": "https://github.com/akgondber/create-ink-app-custom",
	"repository": "create-ink-app-custom",
	"author": {
		"name": "Rushan Alyautdinov",
		"email": "akgondber@gmail.com",
		"url": "https://github.com/akgondber"
	},
	"bin": "cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"test": "xo && ava",
		"jtest": "ava",
		"lint": "xo",
		"xofix": "xo --fix",
		"prcheck": "prettier . --check",
		"prettify": "prettier . --write"
	},
	"files": [
		"index.js",
		"cli.js",
		"templates"
	],
	"keywords": [
		"ink",
		"ink-app",
		"ink",
		"ink-app",
		"cli"
	],
	"dependencies": {
		"execa": "^7.1.1",
		"listr": "^0.14.3",
		"make-dir": "^4.0.0",
		"meow": "^12.0.1",
		"replace-string": "^4.0.0",
		"slugify": "^1.6.6"
	},
	"devDependencies": {
		"ava": "^5.3.0",
		"del": "^7.0.0",
		"prettier": "^2.8.7",
		"strip-ansi": "^7.0.1",
		"tempy": "^3.0.0",
		"xo": "^0.54.2"
	},
	"ava": {
		"timeout": "5m"
	},
	"xo": {
		"prettier": true,
		"ignores": [
			"templates/**"
		]
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
